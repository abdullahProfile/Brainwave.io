
<style>
  .featured-collection {
    display: grid;
    grid-template-columns: repeat(3,1fr);
    gap: 16px;
  }

  .feature-item {
    max-width: 350px;
    border-radius: 16px;
    overflow: hidden;
  }

  .feature-item img {
    width: 100%;
    height: auto;
    display: block;
    margin-bottom: 10px;
    object-fit: cover;
  }

  .feature-item h2 {
    font-size: 1.5em;
    margin-bottom: 10px;
  }

  .feature-item p {
    font-size: 1.2em;
    color: #555;
  }
</style>

<div class="featured-collection">
  {% if section.settings.featured_collection != blank %}
    {% for product in section.settings.featured_collection.products %}
      <div class="feature-item">
        <img
          src="{{ product.featured_image | img_url: 'medium' }}"
          alt="{{ product.title }}"
        />
        <h2>{{ product.title }}</h2>
        <p>{{ product.price | money }}</p>
      </div>
    {% endfor %}
  {% endif %}
</div>


{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Select collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}

