<style>
  .product-page .container {
  display: flex;
  gap: 40px;
  margin: 40px auto;
  }

  .product-gallery {
    flex: 1 1 50%;
  }

  .product-gallery .main-image img {
    width: 100%;
    object-fit: contain;
    border: 0.0625rem solid #ddd;
    border-radius: 0.5rem;
  }

  .product-gallery .thumbnails {
    display: flex;
    gap: 0.625rem;
    margin-top: 0.625rem;
  }

  .product-gallery .thumbnails img {
    width: 5rem;
    height: 5rem;
    object-fit: cover;
    cursor: pointer;
    border: 0.0625rem solid #ddd;
    border-radius: 0.25rem;
    transition: transform 0.2s ease;
  }

  .product-gallery .thumbnails img:hover {
    transform: scale(1.05);
    border-color: #000;
  }

  .product-details {
    flex: 1 1 50%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .product-title {
    font-size: 2rem;
    margin-bottom: 0.625rem;
  }

  .product-price {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1.25rem;
  }

  .product-description {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.875rem;
  }

  .add-to-cart {
    background-color: #000;
    color: #fff;
    padding: 0.9375rem 1.875rem;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    border-radius: 0.375rem;
    transition: background 0.3s ease;
  }

  .add-to-cart:hover {
    background-color: #444;
  }
  @media (max-width: 48rem) {
    .product-page .container {
      flex-direction: column;
    }

    .product-gallery, .product-details {
      flex: 1 1 100%;
    }
  }
</style>
<section class="product-page">
  <div class="container">

    <div class="product-gallery">
      {% if product.images.size > 0 %}
        <div class="main-image">
          <img id="current-image" src="{{ product.images.first | img_url: '1024x1024' }}" alt="{{ product.title }}">
        </div>

        <div class="thumbnails">
          {% for media in product.media %}
            <img src="{{ media.preview_image | img_url: '200x200' }}" alt="{{ product.title }}" onclick="changeImage(this)">
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="product-details">
      <h1 class="product-title">{{ product.title }}</h1>
      <p class="product-price">{{ product.price | money_with_currency }}</p>
      <div class="product-description">
        {{ product.description }}
      </div>

      <form action="/cart/add" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <button type="submit" class="add-to-cart">Add to Cart</button>
      </form>
    </div>

  </div>
</section>